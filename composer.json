{
    "name": "isign/isign-sdk-php",
    "description": "Client for ISIGN.io e-signature API",
    
    "type": "library",
    "license": "MIT",
    "homepage": "https://www.isign.io",

    "require": {
        "php"                       : ">=5.5.9",
        "guzzlehttp/guzzle"         : "~5.1",
        "guzzlehttp/log-subscriber" : "~1.0",
        "symfony/validator"         : "~2.8|~3.0|~3.2"
    },
    "require-dev": {
        "psr/log"           : "~1.0",
        "monolog/monolog"   : "~1.0",
        "phpunit/phpunit"   : "v4.6.10"
    },
    "autoload": {
        "psr-4": {
            "Isign\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Isign\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
